<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.HomeController">

    <VBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">

        <HBox styleClass="header" alignment="CENTER_LEFT" prefWidth="10000">
            <children>
                <ImageView>
                    <Image url="@images/logo.png" />
                </ImageView>
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>

        <HBox VBox.vgrow="ALWAYS">

            <VBox prefWidth="200.0" spacing="10.0"
                  styleClass="sidebar">
                <children>
                    <Label onMouseClicked="#switchToHome" styleClass="sidebar-item-active" text="Home" />
                    <Label onMouseClicked="#switchToPersonal" styleClass="sidebar-item-inactive" text="Personal Task" />
                    <Label onMouseClicked="#switchToWork" styleClass="sidebar-item-inactive" text="Work Task" />
                    <Label onMouseClicked="#switchToShopping" styleClass="sidebar-item-inactive" text="Shopping" />
                </children>
                <padding>
                    <Insets top="20.0" left="15.0" right="10.0" bottom="0.0"/>
                </padding>
            </VBox>
            
            <VBox spacing="20.0" VBox.vgrow="ALWAYS">
                <!-- Top Statistics Boxes -->
                <GridPane hgap="20.0" vgap="0.0" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" />
                        <ColumnConstraints hgrow="NEVER" />
                        <ColumnConstraints hgrow="NEVER" />
                    </columnConstraints>
                    
                    <!-- Shopping List Box -->
                    <VBox onMouseClicked="#switchToShopping" GridPane.columnIndex="0" styleClass="stat-box" alignment="CENTER" spacing="5.0">
                        <children>
                            <Label fx:id="shoppingCountLabel" text="0" styleClass="stat-number" />
                            <Label text="Items in Shopping" styleClass="stat-text" />
                        </children>
                    </VBox>
                    
                    <!-- Work Tasks Box -->
                    <VBox onMouseClicked="#switchToWork" GridPane.columnIndex="1" styleClass="stat-box" alignment="CENTER" spacing="5.0">
                        <children>
                            <Label fx:id="workCountLabel" text="0" styleClass="stat-number" />
                            <Label text="Active Work Tasks" styleClass="stat-text" />
                        </children>
                    </VBox>
                    
                    <!-- Personal Tasks Box -->
                    <VBox onMouseClicked="#switchToPersonal" GridPane.columnIndex="2" styleClass="stat-box" alignment="CENTER" spacing="5.0">
                        <children>
                            <Label fx:id="personalCountLabel" text="0" styleClass="stat-number" />
                            <Label text="Personal Tasks" styleClass="stat-text" />
                        </children>
                    </VBox>
                </GridPane>
                
                <!-- Main Content Area -->
                <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        
                        <!-- Add more content here as needed -->
                    </children>
                </VBox>
                
                <padding>
                    <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
                </padding>
            </VBox>
        </HBox>

        <HBox styleClass="footer" alignment="CENTER" prefWidth="10000">
            <children>
                <Label text="Copyright @ 2025 Todoer" styleClass="footer-text"/>
            </children>
        </HBox>

    </VBox>
</AnchorPane>